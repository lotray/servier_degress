<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ofu.dao.po">
	<class name="Task" table="task">
		<id name="Tid">
			<generator class="native"></generator>
		</id>
		<property name="name"  length="60" not-null="true" />
		<property name="Rid"  length="20" not-null="true" />
		<property name="Uid"  length="30" not-null="true" />
		<property name="State"  length="20" not-null="true" />
	</class>
</hibernate-mapping>